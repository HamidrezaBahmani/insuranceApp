<%- include("../_partial/_header") %>
    <h1>Edit post Page
        <%=post.title%>
    </h1>

    <form action="/posts/update" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input type="text" placeholder="Title" id="inputTitle" name="title" value="<%=post.title%>">

        </div>
        <div class="form-group">
            <label for="inputContents">Content</label>
            <textarea type="text" placeholder="Content" id="inputContents" name="content"><%=post.content%></textarea>

        </div>

        <input type="hidden" id="postid" name="postid" value="<%=post._id%>">
        <input type="file" name="image">
        <div class="form-group">
            <button type="submit" href="#" role="button">Edit</button>

        </div>
    </form>




    <%- include("../_partial/_footer") %>